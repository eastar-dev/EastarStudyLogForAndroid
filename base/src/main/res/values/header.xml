<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_layer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title</item>
        <item name="android:background">@drawable/header_bg</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/margin_activity</item>
        <item name="android:paddingRight">@dimen/margin_activity</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="header_title" parent="@style/header_text">
        <item name="android:onClick">onHeaderTitle</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_title.single">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/header_bg</item>
    </style>

    <style name="header_right" parent="@style/header_text">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
